<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mprtcz.training.Controller">
   <right>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label text="Exercise History" textAlignment="CENTER" underline="true" />
            <ListView fx:id="historyListView" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </right>
   <center>
      <VBox alignment="CENTER" fillWidth="false" scaleShape="false" BorderPane.alignment="CENTER">
         <children>
            <Label text="Exercise Name" textAlignment="CENTER" underline="true" />
            <TextField fx:id="exerciseNameTextField">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin></TextField>
            <Label text="Number of reps" textAlignment="CENTER" underline="true" />
            <TextField fx:id="repeatsTextField">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin></TextField>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonClicked" text="Add" textAlignment="CENTER" />
            <Label fx:id="messagesLabel">
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </center>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <left>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Exercise names" textAlignment="CENTER" underline="true" />
            <ListView fx:id="exerciseTypesListView" onMouseClicked="#onExerciseTypesListViewMouseClicked" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </opaqueInsets>
            </ListView>
         </children>
      </VBox>
   </left>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <HBox alignment="TOP_CENTER">
         <children>
            <PieChart fx:id="exercisesPieChart" prefHeight="222.0" prefWidth="330.0" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS" />
            <BarChart fx:id="exercisesBarChart" prefHeight="251.0" prefWidth="336.0" HBox.hgrow="ALWAYS">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
         </children>
      </HBox>
   </bottom>
</BorderPane>
